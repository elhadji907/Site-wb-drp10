{% apply spaceless %}
  {% set label = 'Image label' %}

  {% embed '@bi-bcl/demo-container.html.twig' with {
    title: 'Overlay'|t,
  } %}
    {% block content %}

      {% embed '@bi-bcl/overlay/overlay.html.twig' with {
        label: label
      } %}
        {% block overlayImage %}
          <img src="https://picsum.photos/240/160?image=1056" alt="Image description" class="img-fluid">
        {% endblock %}
      {% endembed %}

    {% endblock %}
  {% endembed %}{# End embed demo. #}

